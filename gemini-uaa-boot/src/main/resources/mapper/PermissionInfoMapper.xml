<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gls.gemini.uaa.boot.web.mapper.PermissionInfoMapper">

    <resultMap id="permissionInfoResultMap" type="com.gls.gemini.uaa.boot.web.entity.PermissionInfoEntity">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="type_id" property="typeId"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort" property="sort"/>
        <result column="command" property="command"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="version" property="version"/>
        <result column="deleted" property="deleted"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="update_user_name" property="updateUserName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="permissionInfoSql">
        id,code,name,description,type_id,parent_id,sort,command,tenant_id,version,deleted,create_user_id,create_user_name,create_time,update_user_id,update_user_name,update_time
    </sql>
    <select id="loadPermissionListByUserId"
            resultType="com.gls.gemini.uaa.boot.web.entity.PermissionInfoEntity">
        select
        <include refid="permissionInfoSql"/>
        from t_permission_info
        where id in (
        select permission_id from t_role_permission_rel where role_id in (
        select role_id from t_user_role_rel where user_id = #{userId}
        )
        )
    </select>

</mapper>